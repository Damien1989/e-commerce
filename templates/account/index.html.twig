{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}
<h1>Mon compte</h1>
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin"> Vous êtes un administrateur ? </a></small><br/>
    {% endif %}
    <p>Bienvenue {{ app.user.firstname }} vous allez pouvoir accéder à vos informations personnelles ici </p>
        <hr>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item">
                <img src="{{ asset('assets/img/cadenas-verrouille.png') }}" alt="Modifier mon mot de passe"><br/>
                 <a href="{{ path('account_password') }}"> Modifier mon mot de passe </a><br/>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item">
                <img src="{{ asset('assets/img/home-address.png') }}" alt="Ajouter mes adresses"><br/>
                 <a href="{{ path('account_address') }}">Ajouter mes adresses</a> <br/>
            </div>

        </div>
        <div class="col-md-4">
            <div class="account-item">
                <img src="{{ asset('assets/img/clipboard.png') }}" alt="Mes commandes"><br/>
                 <a href="{{ path('account_order') }}">Mes commandes</a> <br/>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    <hr>
{% endblock %}
